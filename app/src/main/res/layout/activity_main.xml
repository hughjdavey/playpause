<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout structure (top to bottom):
      - Title bar (app name + settings)
      - Volume slider
      - Brightness slider
      - Now playing: title, artist, progress bar, timestamps
      - Button cluster: skip back + skip forward (ears) above play/pause (head)
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- â”€â”€ Top bar â”€â”€ -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Remote"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="@id/btnSettings"
        app:layout_constraintBottom_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- â”€â”€ Permission banner â”€â”€ -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/permissionBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="#1A2E1A"
        app:strokeColor="@color/accent"
        app:strokeWidth="1dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to enable play/pause sync"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grant notification access so the button reflects real playback state. Controls still work without it."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- â”€â”€ Sliders (anchored to top) â”€â”€ -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/volumeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”Š  Volume"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/volumeSlider"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/volumeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â˜€  Brightness"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/volumeSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/brightnessSlider"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="255"
        android:progress="128"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/brightnessLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- â”€â”€ Now playing (centred vertically between sliders and buttons) â”€â”€ -->

    <LinearLayout
        android:id="@+id/nowPlayingSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/brightnessSlider"
        app:layout_constraintBottom_toTopOf="@id/btnSkipBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="3dp" />

        <!-- Progress bar + timestamps -->
        <LinearLayout
            android:id="@+id/progressSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_marginTop="12dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progressDrawable="@drawable/seekbar_track"
                android:max="100"
                android:progress="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvElapsed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- â”€â”€ Button cluster: skip buttons (ears) above play button (head) â”€â”€ -->

    <!--
        The skip buttons are positioned above the play button, horizontally spread
        to sit roughly over its left and right thirds, with a small gap below them
        before the play button begins. They're linked to btnPlayPause for alignment.
    -->

    <!-- Skip back (left ear) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipBack"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="âˆ’20s"
        android:textSize="20sp"
        android:textColor="@color/text_on_accent_dark"
        app:backgroundTint="@color/accent_dark"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@id/btnPlayPause"
        app:layout_constraintStart_toStartOf="@id/btnPlayPause"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Skip forward (right ear) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipForward"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="+20s"
        android:textSize="20sp"
        android:textColor="@color/text_on_accent_dark"
        app:backgroundTint="@color/accent_dark"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@id/btnPlayPause"
        app:layout_constraintEnd_toEndOf="@id/btnPlayPause"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Play/pause (head) â€” larger now it has the row to itself -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlayPause"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:text="Play"
        android:textSize="24sp"
        android:textColor="@color/text_on_accent"
        app:backgroundTint="@color/accent"
        app:cornerRadius="120dp"
        app:iconSize="60dp"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
