<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Settings button top right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Remote"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="@id/btnSettings"
        app:layout_constraintBottom_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Central play/pause button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlayPause"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:text="Play"
        android:textSize="22sp"
        android:textColor="@color/text_on_accent"
        app:backgroundTint="@color/accent"
        app:cornerRadius="110dp"
        app:iconSize="56dp"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Skip back button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipBack"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="−20s"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        app:strokeColor="@color/outline"
        app:cornerRadius="55dp"
        app:layout_constraintTop_toTopOf="@id/btnPlayPause"
        app:layout_constraintBottom_toBottomOf="@id/btnPlayPause"
        app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Skip forward button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipForward"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="+20s"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        app:strokeColor="@color/outline"
        app:cornerRadius="55dp"
        app:layout_constraintTop_toTopOf="@id/btnPlayPause"
        app:layout_constraintBottom_toBottomOf="@id/btnPlayPause"
        app:layout_constraintStart_toEndOf="@id/btnPlayPause"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Brightness section -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="☀  Brightness"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/brightnessSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/brightnessSlider"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="255"
        android:progress="128"
        android:progressTint="@color/accent"
        android:thumbTint="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
