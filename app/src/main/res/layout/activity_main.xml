<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- Settings button top right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Remote"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="@id/btnSettings"
        app:layout_constraintBottom_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Permission banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/permissionBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="#1A2E1A"
        app:strokeColor="#1DB954"
        app:strokeWidth="1dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to enable play/pause sync"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grant notification access so the button reflects real playback state. Controls still work without it."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Central play/pause button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlayPause"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:text="Play"
        android:textSize="22sp"
        android:textColor="@color/text_on_accent"
        app:backgroundTint="@color/accent"
        app:cornerRadius="110dp"
        app:iconSize="56dp"
        app:iconGravity="top"
        app:iconPadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Skip back button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipBack"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="âˆ’20s"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        app:strokeColor="@color/outline"
        app:cornerRadius="55dp"
        app:layout_constraintTop_toTopOf="@id/btnPlayPause"
        app:layout_constraintBottom_toBottomOf="@id/btnPlayPause"
        app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Skip forward button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkipForward"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="+20s"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        app:strokeColor="@color/outline"
        app:cornerRadius="55dp"
        app:layout_constraintTop_toTopOf="@id/btnPlayPause"
        app:layout_constraintBottom_toBottomOf="@id/btnPlayPause"
        app:layout_constraintStart_toEndOf="@id/btnPlayPause"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Now playing section: title and artist -->
    <LinearLayout
        android:id="@+id/nowPlayingSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/btnPlayPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressSection"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="3dp" />

    </LinearLayout>

    <!-- Progress section: bar + elapsed/total labels -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/volumeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progressDrawable="@drawable/seekbar_track"
            android:max="100"
            android:progress="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvElapsed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

    <!-- Volume label -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/volumeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”Š  Volume"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/volumeSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Volume slider -->
    <SeekBar
        android:id="@+id/volumeSlider"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toTopOf="@id/brightnessLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Brightness label -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â˜€  Brightness"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/brightnessSlider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Brightness slider -->
    <SeekBar
        android:id="@+id/brightnessSlider"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="255"
        android:progress="128"
        android:progressDrawable="@drawable/seekbar_track"
        android:thumb="@drawable/seekbar_thumb"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
