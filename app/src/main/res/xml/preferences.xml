<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Skip Controls">

        <androidx.preference.SeekBarPreference
            android:key="skip_seconds"
            android:title="Skip duration (seconds)"
            android:summary="How many seconds to skip back or forward"
            android:defaultValue="20"
            android:max="60"
            app:min="5"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Permissions">

        <androidx.preference.Preference
            android:key="grant_media_permission"
            android:title="Play/pause sync"
            android:summary="Tap to grant" />

        <androidx.preference.Preference
            android:key="grant_brightness_permission"
            android:title="System brightness control"
            android:summary="Tap to grant" />

    </PreferenceCategory>

</PreferenceScreen>
